#include <iostream>
#include <math.h>
#include <cmath>
using namespace std;

int main(void) {

    const int size = 10;
    int m[size] = {0,43,22,11,5,0,0,-1,4,-8};
    bool nul = false;

    for (int i = 0; i < 10; i++)
    {
        if (m[i] == 0)
        {
            cout << "zero is at number: " << i + 1 << endl;
            nul = true;
        }
    }

    if (!nul)
    {
        cout << "has no zeros" << endl;
    }
}
